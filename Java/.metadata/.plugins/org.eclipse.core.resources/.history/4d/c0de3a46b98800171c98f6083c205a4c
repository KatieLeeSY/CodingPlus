package Chapter06;

class Tv {
	// Tv의 속성(멤버변수)
	String color;		// 색상
	boolean power;		// 전원상태(on/off)
	int channel;		// 채널
	
	// Tv의 기능(메서드)
	void power() {		// TV를 켜거나 끄는 기능을 하는 메서드
		power = !power;
	}
	void channelUp() {
		++channel;
	}
	void channelDown() {
		--channel;
	}
}

public class TvTest {

	public static void main(String[] args) {
		Tv t;
		t = new Tv();

	}

}
